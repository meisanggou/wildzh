@import "../common/lib/weui.wxss";
@import "../common/lib/lib_app.wxss";

.border0 {
    border: none;
}

.center {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
} 

.bottom30{
    margin-bottom: 30rpx;
}

.avatar{
  display: flex;
  width: 200rpx;
  height: 200rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
}


.right-slip {
    width:50rpx;
    height:50rpx;
    margin: 0 auto;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}