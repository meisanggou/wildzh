page {
  height: 100%;
}

.page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  height: 1000rpx;
  background: #fff;
  margin: 15rpx 15rpx 70rpx 15rpx;
  position: relative;
  z-index: 2;
}

.bottimBG {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  z-index: 1;
}

.top {
  display: flex;
  height: 250rpx;
  border-bottom: 2rpx solid #919191;
  align-items: center;
  margin: 0rpx 15rpx 0rpx 15rpx;
}

.userPic {
  display: flex;
  width: 180rpx;
  height: 180rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 50%;
}

.item {
  height: 75rpx;
  line-height: 75rpx;
  margin: 0rpx 15rpx 0rpx 15rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #cfcfcf;
}

.feedBack {
  padding: 10rpx 20rpx 10rpx 20rpx;
  border: 1rpx solid #5d5d5d;
  border-radius: 15rpx;
  text-align: center;
  margin-top: 30rpx;
  font-size: 32rpx;
}
