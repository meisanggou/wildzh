page{
    font-size: 32rpx;
    padding-bottom: 50rpx;
    font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
    background-color: #ffffff;
 }

.head{

  background-color: #fff;
}

.headText{
  padding: 20rpx 0rpx 0rpx 20rpx;
  color: #7a89df;
}

.choseReason{
  padding: 10rpx 0rpx 40rpx 0rpx;
  background-color: #fff;
  display:inline-block;
  border-bottom: 2rpx #efefef solid;
}

.reasonItem{
  margin:15rpx;
  padding: 15rpx;
  background-color: #efefef;
  float:left;
  display:inline;
  color: #7a7a7a;

}

.remark{
  margin-top: 5rpx;
  background-color: #fff;
   border-bottom: 2rpx #efefef solid;
}

.remark-title{
  display: flex;
  color: #7a89df;
  padding: 10rpx 0rpx 40rpx 20rpx;
}

.inputRemark{
  padding: 0rpx 20rpx 0rpx 20rpx;
  width: 90%;
}

.imageTitle{
  display: flex;
  color: #7a89df;
  margin-top: 10rpx;
  padding: 10rpx 0rpx 20rpx 20rpx;
  background-color: #fff;
}
.gallery {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    background-color: #fff;

}

/*每张图片所占容器*/
.itemImage {
    position: relative;
}


/*小图片*/
.thumb {
	margin: 10rpx;
  position: relative;
}

/*删除按钮*/
.delete {
	position: absolute;
	height: 40rpx;
	top: 0rpx;
  right:0;
	width: 40rpx;
}

.delete image {
	position: absolute;
	width: 30rpx;
	height: 30rpx;
}

.photo{
 text-align: center;
 margin: 30rpx 0rpx 20rpx 0rpx;
}

.submitButton{   
  width:220rpx;
  height:70rpx;
  background-color:#7a89df;
  border-radius:30px;
  color:#fff;
  margin: auto;
  margin-bottom: 30rpx;
  margin-top: 60rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  border: 0;
}
