<view class="page">
  <view style='text-align: center;justify-content:center;display:flex;align-items:center;margin:0rpx 0rpx 70rpx 0rpx;'>
    <image class='image' src='../../images/8-01.png'></image>
  </view>

    <form bindsubmit="registerSuccess">
      <view class='text'>输入您的真实姓名</view>
      <view class="inputFrame">
        <input placeholder="姓名" name="realName" placeholder-style='font-size:35rpx;'/>
      </view>

      <view class='text'>输入您的部门名称</view>
      <view class="inputFrame">
        <input placeholder="部门" name="department" placeholder-style='font-size:35rpx;'/>
      </view>

      <view class='text'>输入您的工号</view>
      <view class="inputFrame">
        <input  type="number" placeholder="工号" name="workNumber" placeholder-style='font-size:35rpx;'/>
      </view>

      <button class='ensure'  formType="submit" >确定</button>

      <view class='tip'>一经确认不可修改</view>
    </form>

</view>