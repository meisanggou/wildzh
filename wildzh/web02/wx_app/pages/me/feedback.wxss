/* pages/me/feedback.wxss */
page {
    background-color: #F8F8F8;
    height: 100%;
}
.top {
    height: 90rpx;
}
.statis {
    display: flex;
    /* margin-top: -90rpx; */
    margin-left: 3%;
    margin-bottom: 40rpx;
    border-radius: 5rpx;
    background-color: white;
    width: 94%;
    height: 180rpx;
    text-align: center;
}

.statis-div {
    height: 100%;
    width: 33%;
}

.statis-div-v {
    font-size: 40rpx;
    margin: 0 auto;
    line-height: 90rpx;
    width: 100%;
}

.statis-div-desc {
    font-size: 30rpx;
    color: gray;
    margin: 0 auto;
    width: 100%;
    line-height: 90rpx;
}

.statis-division {
    /* width: 50rpx; */
    text-align: center;
    margin-top: auto;
    margin-bottom: auto;
    height: 180rpx;
    display: inline-block;
    line-height: 180rpx;
}

.good-item{
    display: flex;
    border-top:whitesmoke solid 2rpx;
    background-color: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
    margin-left: 1.5%;
    width: 97%;
    height: 250rpx;
    font-size: 30rpx;
}
.good-item-title {
    display: flex;
    height: 150rpx;
    align-items: center;
    font-size: 35rpx;
}
.good-item-lh {
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
}
.good-item-left{
    width: 70%;
    margin-left: 10rpx;
}

.red {
    color: red;
}
.good-item-vc {
    display: flex;
    height: 100rpx;
    align-items: center;
}
.good-item-attention {
    padding-left: 15rpx;
    padding-right: 15rpx;
    border-radius: 5rpx;
    border: red solid 1rpx;
}

.good-item-button{
    margin-top: 60rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 10rpx 30rpx;
    font-size: 36rpx;
    text-align: center;
    border-radius: 10rpx;
}
.text-center {
    text-align: center;
}
.bc-enable {
    background-color: #fae1ab;
}
.bc-disable {
    background-color:#999999;
    color: white;
}

.dis-flex{
    display: flex;
}

.margin-l20 {
    margin-left: 20rpx;
}