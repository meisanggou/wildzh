@import "../common/lib/weui.wxss";
@import "../common/lib/lib_app.wxss";

.border0 {
    border: none;
}

.user-panel{
    display: flex;
    align-items: center;
    /* background-color:wheat ; */
    height: 350rpx;
    padding-bottom: 90rpx;
}

.user-panel2{
    display: flex;
    align-items: center;
    /* background-color:wheat ; */
    height: 260rpx
}

.center {
    display: flex;
    justify-content: center;
    margin-bottom: 30rpx;
}

.bottom30 {
    margin-bottom: 30rpx;
}

.avatar {
    display: flex;
    width: 160rpx;
    height: 160rpx;
    margin-left: 20rpx;
    border-radius: 80rpx;
    /* margin-right: auto; */
    margin-top: 30rpx;
}
.user-data{
    /* color: white; */
    margin-left: 20rpx;
    /* display: flex; */
}

.user-data button {
    font-size: 40rpx;
    border: none;
} 
.user-data-name{
    margin-left: 10rpx;
    font-size: 40rpx;
}
.user-data-exam {
    display: flex;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.user-data-exam-text {
    color: #20b2aa;
    padding: 20rpx 6rpx;
    background-color: white;
}

.statis {
    display: flex;
    margin-top: -90rpx;
    margin-left: 3%;
    margin-bottom: 40rpx;
    border-radius: 5rpx;
    background-color: white;
    width: 94%;
    height: 180rpx;
    text-align: center;
}

.statis-div {
    height: 100%;
    width: 25%;
}
.statis-div-v {
    font-size: 40rpx;
    margin: 0 auto;
    line-height: 90rpx;
    width: 100%;
}
.statis-div-desc {
    margin: 0 auto;
    width: 100%;
    line-height: 90rpx;
}
.statis-division {
    width: 50rpx;
    text-align: center;
    margin-top: auto;
    margin-bottom: auto;
    height: 180rpx;
    display: inline-block;
    line-height: 180rpx;
}


.right-slip {
    width: 50rpx;
    height: 50rpx;
    margin: 0 auto;
}

.navigator-arrow {
    padding-right: 26rpx;
    position: relative;
}

.navigator-arrow:after {
    content: " ";
    display: inline-block;
    height: 18rpx;
    width: 18rpx;
    border-width: 2rpx 2rpx 0 0;
    border-color: #888;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 28rpx;
}

.bottom-tip {
    color: red;
    position: fixed;
    width: 100%;
    height: 50rpx;
    bottom: 10px;
    /* z-index: -1; */
    text-align: center;
    text-decoration: underline;
}
