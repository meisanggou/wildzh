@import "../common/lib/weui.wxss";
@import "../common/lib/lib_app.wxss";

page {
    height: 100%;
}

.pageContent {
    height: 100%;
    margin-bottom: 120rpx;
}

.page {
    font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
    height: auto;
    background: rgb(255, 255, 255);
    margin: 15rpx 15rpx 110rpx 15rpx;
    position: relative;
    z-index: 2;
    min-height: 90%;
}


.top {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 15rpx 0rpx 15rpx 0rpx;
    border-bottom: 1rpx solid #5d5d5d;
    font-size: 32rpx;
}

.middle {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 15rpx 0rpx 15rpx 0rpx;
    font-size: 32rpx;
}

.top view {
    padding: 10rpx 20rpx 10rpx 20rpx;
    border-radius: 15rpx;
}

.fb-desc{
    font-size: 36rpx;
    background-color: white;
    width: 100%;
  }

  
.content {
    font-size: 32rpx;
    /* margin: 20rpx; */
}

.item {
    margin-bottom: 15rpx;
    font-size: 32rpx;
    margin: 20rpx;
}

.line {
    margin-top: 100rpx;
    display: flex;
    border-bottom: 1rpx solid #5d5d5d;
    align-items: center;
    justify-content: space-around;
    z-index: 8;
    margin-bottom: 60rpx;
}


.noChose {
    background-color: #f0f5fb;
    line-height: 70rpx;
    font-size: 30rpx;
    margin: 20rpx 20rpx 20rpx 20rpx;
    padding-left: 20rpx;
    color: #363637;
    border-radius: 5rpx;
}


.switch {
    font-size: 50rpx;
    text-align: center;
    width: 20%;
}

.bottom {
    width: 100%;
    font-size: 28rpx;
    position: fixed;
    bottom: 0rpx;
    background-color: #fff;
    height: 100rpx;
    border-top: 1px solid #c9c9d8;
    display: flex;
    align-items: center;
    justify-content: space-around;
    z-index: 10;
}

.updateButton {
    width: 50%;
    background-color: Transparent; 
    border-style: none;
}

.updateButton:after {
    background-color: Transparent; 
    border-style: none;
}

/* 覆盖weui.wxss */

.weui-cell:before {
    content: " ";
    position: absolute;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 0rpx solid #d9d9d9;
    color: #d9d9d9;
    left: 15px;
}

.options {
    display: flex;
}
.option {
    width: 20px;
    height: 20px;
    line-height: 20px;
    margin-right: 25rpx;
    border: solid 1rpx black;
    text-align: center;
}

.option-chose {
    width: 20px;
    height: 20px;
    line-height: 20px;
    margin-right: 25rpx;
    text-align: center;
    color: white;
    background-color: #9ad4fc;
}