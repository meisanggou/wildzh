page{
	height: 100%;
}

.pageContent{
  height: 100%;
}
.page {
  font-family: 'PingFang SC',
                 'Helvetica Neue',
                 Helvetica,
                 'Droid Sans Fallback',
                 'Microsoft Yahei',
                 sans-serif;
  height: auto;
  background: rgb(255, 255, 255);
  margin: 15rpx 15rpx 110rpx 15rpx;
  position: relative;
  z-index: 2;
  min-height: 90%;
}

.picker {
  width: 380rpx;
  height: 180rpx;
  font-size: 30rpx;
  line-height: 180rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  margin-top: 300rpx;
}
.pickerContent{
  background-color: #dfc7c7;
  border-radius: 55rpx;
}

.top {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 15rpx 0rpx 15rpx 50rpx;
  border-bottom: 1rpx solid #5d5d5d;
  font-size: 32rpx;
}

.middle {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 15rpx 0rpx 15rpx 0rpx;
  font-size: 32rpx;
}

.top view {
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-radius: 15rpx;
}

.content {
  font-size: 32rpx;
  /* margin: 20rpx; */
}

.item {
  margin-bottom: 15rpx;
  font-size: 32rpx;
  margin: 20rpx;
}

.line {
  margin-top: 100rpx;
  display: flex;
  border-bottom: 1rpx solid #5d5d5d;
  align-items: center;
  justify-content: space-around;
  z-index: 8;
  margin-bottom: 60rpx;
}

.showAnswer {
  font-size: 32rpx;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border: 1rpx solid #5d5d5d;
  border-radius: 15rpx;
  margin-bottom: -32rpx;
  z-index: 9;
  background-color: #fff;
}

.noChose {
  background-color: #f0f5fb;
  line-height: 70rpx;
  font-size: 30rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  padding-left: 20rpx;
  color: #363637;
  border-radius: 5rpx;
}

.chose {
  background-color: #fff;
  color: #7a89df;
  border: 1rpx #7a89df solid;
  line-height: 68rpx;
  font-size: 30rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  padding-left: 20rpx;
  border-radius: 5rpx;
}

.errorChose {
  background-color: #fff;
  color: #f01212;
  border: 1rpx #f01212 solid;
  line-height: 68rpx;
  font-size: 30rpx;
  margin: 20rpx 20rpx 20rpx 20rpx;
  padding-left: 20rpx;
  border-radius: 5rpx;
}

.switch {
  font-size: 70rpx;
  text-align: center;
  width: 35%;
}

.switchtext {
  font-size: 40rpx;
  text-align: center;
  width: 35%;
}

.bottom {
  width: 100%;
  font-size: 28rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: #fff;
  height: 100rpx;
  border-top: 1px solid #c9c9d8;
  display: flex;
  align-items: center;
  justify-content: space-around;
  z-index: 10;
}
.top-title {
  text-align: center;
  width: 90%;
}
.icon {
  float: right;
  height: 50rpx;
  width: 50rpx;
}
.feedback-type{
  width: 100%;
  font-size: 36rpx;
  background-color: white;
  /* background-color: transparent; */
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.fd-type-picker{
  width: 100%;
}
.fb-type-k {
  width: 35%;
  font-weight: bold;
  /* padding-right: 10rpx; */
  display: inline-block;
}

.fb-type-v {
  width: 65%;
  text-align: center;
  background-color: white;
  /* padding-left: 20rpx; */
  /* padding-right: 20rpx; */
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: inline-block;
}

.fb-desc{
  font-size: 36rpx;
  background-color: white;
  width: 100%;
}
.view-tag {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
.tag {
  /* border:2rpx solid; */
  border-radius:15rpx;
  margin-left: 10rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  background-color: #FFBB77	;
}