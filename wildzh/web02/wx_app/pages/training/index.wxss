.page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90vh;
}

.content {
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.button-menu {
  display: flex;
  width: 600rpx;
  margin-left: auto;
  margin-right: auto;
}


.picker{
  width: 80%;
  height: 100rpx;
  color: #ffffff;
  font-size: 45rpx;
  line-height: 100rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
}

.menu {
  margin-top: 30rpx;
  margin-left: 10vh;
  margin-right: 10vh;
  height: 120rpx;
  background-color: rgb(50, 177, 228);
}


.img-menu {
  display: inline-block;
  width: 30%;
  height: 80rpx;
}

.button{
  display: inline-block;
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  justify-content: center;
  margin: 0;
  padding-bottom: 15rpx;
  
}

.button-color1{
  width: 100%;
  background-color: #fa4545;
  border-radius: 15rpx;
}

.button-color2{
  width: 100%;
  background-color: #f19e20;
  border-radius: 15rpx;
}

.button-color3{
  background-color: #de3ef3;
  border-radius: 15rpx;
}

.button-color4{
  background-color: #cbda05;
  border-radius: 15rpx;
}

.button-color5{
  background-color: #52910b;
  border-radius: 15rpx;
}

.error-tip {
  color: red;
  text-align: center;
}

.kind-list-item {
  /* width: 80%; */
  margin: 20rpx 0;
  
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list-item:first-child {
  margin-top: 0;
}

.kind-list-item-hd {
  padding: 32rpx;
  display: flex;
  align-items: center;
  transition: opacity .3s;
}

.kind-list-text{
  font-size: 45rpx;
  flex: 1;
}

.kind-list-img {
  width: 60rpx;
  height: 60rpx;
}