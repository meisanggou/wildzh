/* pages/vc/goods.wxss */
page {
    background-color: #F8F8F8;
    height: 100%;
}

.good-item{
    display: flex;
    border-top:whitesmoke solid 2rpx;
    background-color: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
    margin-left: 1.5%;
    width: 97%;
    height: 250rpx;
    font-size: 30rpx;
}
.good-item-title {
    display: flex;
    height: 150rpx;
    align-items: center;
    font-size: 35rpx;
}
.good-item-lh {
    height: 50rpx;
    line-height: 50rpx;
    margin: 0 auto;
}
.good-item-left{
    width: 70%;
    margin-left: 10rpx;
}

.red {
    color: red;
}

.list-item-desc {
    display: flex;
    height: 100rpx;
    align-items: center;
    color: gray;
}
.good-item-attention {
    padding-left: 15rpx;
    padding-right: 15rpx;
    border-radius: 5rpx;
    border: red solid 1rpx;
}

.good-item-button{
    margin-top: 60rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 10rpx 30rpx;
    font-size: 36rpx;
    text-align: center;
    border-radius: 10rpx;
}
.text-center {
    text-align: center;
}
.bc-enable {
    background-color: #CE7870;
    color: whitesmoke;
}
.bc-disable {
    background-color:#999999;
    color: white;
}

.dis-flex{
    display: flex;
}

.margin-l20 {
    margin-left: 20rpx;
}