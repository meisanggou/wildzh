/* pages/vc/make_vc.wxss */
page {
    background-color: #F8F8F8;
    height: 100%;
}

.item {
    display: flex;
    border-top:whitesmoke solid 2rpx;
    background-color: white;
    border-radius: 10rpx;
    margin-top: 20rpx;
    margin-left: 1.5%;
    width: 97%;
    height: 250rpx;
    font-size: 30rpx;
}

.item-left {
    width: 70%;
    margin-left: 10rpx;
}

.item-top {
    display: flex;
    height: 150rpx;
    align-items: center;
    font-size: 35rpx;
}

.item-right {
    width: 30%;
}

.item-center {
    display: flex;
    height: 100%;
    justify-content: center;
    text-align: center;
    align-items: center;
}

.item-center-content {
    height: 90rpx;
    line-height: 90rpx;
    min-width: 120rpx;
    padding: 10rpx 30rpx;
    font-size: 36rpx;
    text-align: center;
    border-radius: 10rpx;
}

.margin-l10 {
    margin-left: 10rpx;
}

.red {
    color: red;
}

.yellow {
    color: #c37e00;
}

.item-btn-enable {
    color: white;
    background-color: #FD5054;
}

.item-btn-disable {
    background-color:#999999;
    color: white;
}